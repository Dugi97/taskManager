{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12"></div>
            <div class="col-lg-1 col-md-1 col-sm-12"></div>
            <div class="col-lg-2 col-md-2 col-sm-12 reg-log-form">
                <form method="post" action="{{ path('app_register') }}">
                    <h1>eclipse</h1>
                    <h5>The verification code is sent to your email</h5>
                    <h5>Please enter that code in below and click verify</h5>
                    <input name="verify_code_input" type="text" placeholder="verification code" class="reg-log-form-fields form-control"><br>
                    <input class="btn btn-outline-dark btn-lg mb-2" value="Verify" type="submit">
                </form>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-12"></div>
            <div class="col-lg-4 col-md-4 col-sm-12"></div>
        </div>
    </div>
{% endblock %}

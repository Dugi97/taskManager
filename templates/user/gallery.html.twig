{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container galleryContainer">
        <a href = "javascript:history.back()">Back to previous page</a>
        <div class="row">
            {% for image in user.files %}
                <div class="col-3 mb-5 galleryItem">
                    <a href="#">
                        <img src="{{ image.url }}" class="img-fluid" style="height: 200px;width: 100%;">
                        <div class="viewImageButton">Preview</div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-4" style="border: 2px solid yellow">
                <div class="profileData mt-3">
                    <div class="profileImage">
                        <img src="{{ user.profilePicture }}" alt="">
                    </div>
                    <h3><b>{{ user.fullName }}</b></h3>
                    <h4>born <b>{{ user.dateOfBirth|date('d. m. Y.') }}</b></h4>
                    <h4>from <b>{{ user.countryAndCity }}</b></h4>
                    <form action="{{ path('upload_image', {user: user.id}) }}" method="post" enctype="multipart/form-data">
                        <input type="file" name="files[]" multiple="multiple" onchange="submit()">
                    </form>
                </div>
            </div>
            <div class="col-lg-8">
                <h1 class="text-center">Posts</h1>
                <div class="newPost">
                    <form action="{{ path('post_new') }}" method="post">
                        <textarea class="form-control" placeholder="Type new post..." name="newPost" id="newPost" rows="5"></textarea>
                        <button type="submit" class="btn btn-primary" value="submit">Publish</button>
                    </form>
                    <a href="#">Add content</a>
                </div>
                <div class="myPosts">
                    {% for post in allPosts|reverse %}
                        <div class="post">
                            <span><b>{{ user.fullName }}</b></span> in <span><b>{{ post.dateAndTime }}</b></span>
                            <div class="postText">
                                <p>{{ post.text }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

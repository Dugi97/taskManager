{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-4" style="border: 2px solid yellow">
                <div class="profileData mt-3">
                    <div class="profileImage">
                        <img src="{{ user.profilePicture }}" alt="">
                    </div>
                    <h3><b>{{ user.fullName }}</b></h3>
                    <h4>born <b>{{ user.dateOfBirth|date('d. m. Y.') }}</b></h4>
                    <h4>from <b>{{ user.countryAndCity }}</b></h4>
                    <form action="{{ path('upload_image', {user: user.id}) }}" method="post" enctype="multipart/form-data">
                        <input type="file" name="files[]" multiple="multiple" onchange="submit()">
                    </form>
                    <div class="row">
                        {% for image in myImages %}
                            <div class="col-lg-4" style="border: 2px solid red;">
                                    <img src="{{ image.url }}" alt="" class="img-responsive">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <h1 class="text-center">Posts</h1>
                <div class="newPost">
                    <form action="{{ path('post_new') }}" method="post">
                        <textarea style="height: 150px" class="form-control" placeholder="Type new post..." name="newPost" id="newPost" rows="200" maxlength="255"></textarea>
                        <button type="submit" class="btn btn-primary" value="submit">Publish</button>
                    </form>
                    <a href="#">Add content</a>
                </div>
                <div class="myPosts">
                    {% for post in allPosts|reverse %}
                        <div class="postAndComment">
                            <span><b>{{ user.fullName }}</b></span> in <span><b>{{ post.time }}</b></span>
                            <div class="postText">
                                <p>{{ post.text }}</p>
                            </div>
                            {% for comment in post.comments %}
                                <div class="comments">
                                    <p><em>Commented by </em><b>{{ comment.user }}</b><em> at </em><b>{{ comment.time }}</b></p>
                                    <p>{{ comment.text }}</p>
                                </div>
                            {% endfor %}
                            <form action="{{ path('leave_comment', {postId: post.id}) }}" method="post">
                                <input type="text" class="commentInputField" name="commentInputField">
                                <button type="submit" class="commentButton float-right">Comment</button>
                            </form>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    {#    <a href="{{ path('user_index') }}">back to list</a>#}

    {#    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>#}


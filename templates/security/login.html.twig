{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12"></div>
            <div class="col-lg-1 col-md-1 col-sm-12"></div>
            <div class="col-lg-2 col-md-2 col-sm-12 reg-log-form">
                <form method="post" novalidate>
                    {% if app.user %}
                        <div>You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a></div>
                    {% endif %}
                    <h1>eclipse</h1>
                    <h3>Please sign in</h3>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="reg-log-form-fields form-control" required autofocus placeholder="email">
                    <input type="password" name="password" id="inputPassword" class="reg-log-form-fields form-control" required placeholder="password">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <label>Remember me</label>
                    <input type="checkbox" name="_remember_me"><br>
                    <button class="btn btn-outline-dark btn-lg mb-2" type="submit">Sign in</button>
                </form>
                <div class="reg-log-form-question m-2">You don't have account ? <a href="/register">Register here !</a></div>
            </div>
            <div class="col-lg-1 col-md-1 col-sm-12"></div>
            <div class="col-lg-4 col-md-4 col-sm-12"></div>
        </div>
    </div>
{% endblock %}
